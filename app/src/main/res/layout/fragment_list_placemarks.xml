<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.silvanadorantescode.taxi_location_android.presentation.viewmodel.PlacemarksViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/framgent_list_placemarks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:clickable="true"
        tools:context=".presentation.ui.ListPlacemarksFragment">

        <com.example.silvanadorantescode.taxi_location_android.util.TaxiLocationToolbarView
            android:id="@+id/taxi_location_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:icon_left_toolbar="true"
            app:menu_toolbar="false"
            app:icon_right_toolbar="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_placemarks"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_title"
            android:layout_marginTop="@dimen/xlarge_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/taxi_location_toolbar"
            app:layout_constraintHorizontal_bias="0.073" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/extra_big_padding" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/header_width"
            android:layout_height="@dimen/header_height"
            app:srcCompat="@drawable/taxi3"
            android:layout_marginEnd="@dimen/xxxlarge_padding"
            android:layout_marginRight="@dimen/xxxlarge_padding"
            android:layout_marginLeft="@dimen/xxxlarge_padding"
            android:layout_marginStart="@dimen/xxxlarge_padding"
            android:layout_marginBottom="@dimen/xxxlarge_padding"
            android:layout_marginTop="@dimen/xxxlarge_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.509" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.34" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlacemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxlarge_padding"
            android:layout_marginLeft="@dimen/xxxlarge_padding"
            android:layout_marginStart="@dimen/xxxlarge_padding"
            android:layout_marginEnd="@dimen/xxxlarge_padding"
            android:layout_marginRight="@dimen/xxxlarge_padding"
            android:layout_marginBottom="@dimen/normal_padding"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:setAdapter="@{model.getRecyclerPlacemarksAdapter}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>